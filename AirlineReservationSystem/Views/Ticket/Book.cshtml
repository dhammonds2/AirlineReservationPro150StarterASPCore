@{
}
<div class="invoice-box">
    <table cellpadding="0" cellspacing="0">
        <tr class="top">
            <td colspan="2">
                <table>
                    <tr>
                        <td class="title">SkyHappy Airlines</td>
                        <td>
                            Created: @DateTime.Now.ToString("dddd, dd MMMM yyyy") <br>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr class="information">
            <td colspan="2">
                <table>
                    <tr>
                        <td>
                            SkyHappy<br>
                            Based in San Francisco, CA<br>

                        </td>

                        <td>
                            @ViewBag.Customer.firstName @ViewBag.Customer.lastName<br>
                            @ViewBag.Customer.phoneNumber<br>
                            @ViewBag.Customer.email<br>
                            @ViewBag.Customer.dateOfBirth.ToString("dddd, dd MMMM yyyy");
                        </td>
                    </tr>
                </table>
            </td>
        </tr>

        <tr class="heading">
            <td>
                Payment Method
            </td>
            <td>
                Status
            </td>
        </tr>

        <tr class="details">
            <td>
                Ideal
            </td>
            <td>
                Complete
            </td>
        </tr>

        <tr class="heading">
            <td>
                Flight Price Details to @ViewBag.Flight.arrivalCountry with @ViewBag.Ticket.classType
            </td>
            <td>
            </td>
        </tr>
        @for (int i = 0; i < ViewBag.Ticket.numberOfAdults; i++)
        {
            <tr class="item">
                <td>
                    1 adult ticket
                </td>
                <td>
                    €@ViewBag.AdultFarePrice
                </td>
            </tr>
        }
        @for (int i = 0; i < ViewBag.Ticket.numberOfChildren; i++)
        {
            <tr class="item">
                <td>
                    1 Child ticket
                </td>
                <td>
                    €@ViewBag.ChildFarePrice
                </td>
            </tr>
        }
        <tr class="total">
            <td></td>

            <td>
                Total: €@ViewBag.TotalPrice
            </td>
        </tr>
    </table>
    Please Note:
    <ul>
        <li>
            The price you see is including everything.
        </li>
        <li>
            No hidden fees :).
        </li>
    </ul>
    <dl>
        <dr>Privacy Policy</dr>
        <dd>We want to fully protect your privacy. See our Privacy Policy for more details.</dd>
        <dr>Contact Us</dr>
        <dd>
            if you have any questions please write to us at: Neumont College of Computer Science
        </dd>
        <dd>
            © 2023-@DateTime.Now.ToString("yyyy") All right reserved.
        </dd>
    </dl>
</div>